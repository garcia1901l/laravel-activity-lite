{
  "name": "garcia1901l/laravel-activity-lite",
  "description": "Lightweight activity logger for Laravel",
  "type": "laravel-package",
  "license": "MIT",
  "authors": [
    {
      "name": "Frank Garcia",
      "email": "garcia1901l@gmail.com",
      "homepage": "https://github.com/garcia1901l",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.1",
    "illuminate/database": "^10.0|^11.0|^12.0",
    "illuminate/events": "^10.0|^11.0|^12.0",
    "illuminate/support": "^10.0|^11.0|^12.0"
  },
  "keywords": [
    "laravel",
    "activity",
    "logger",
    "monitoring",
    "tracking",
    "audit",
    "mongodb"
  ],
  "config": {
    "platform-check": false,
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "Garcia1901l\\LaravelActivityLite\\": "src/"
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "extra": {
    "laravel": {
      "providers": [
        "Garcia1901l\\LaravelActivityLite\\ActivityLiteServiceProvider"
      ]
    }
  },
  "suggest": {
    "mongodb/laravel-mongodb": "Required for MongoDB support (v3.8 or higher)",
    "ext-mongodb": "PHP extension required for MongoDB"
  }
}
